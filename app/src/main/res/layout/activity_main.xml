<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/imvResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom|end"
            android:padding="10dp"
            android:text="00"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/gl1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#80000000"
            android:weightSum="5"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/gl1"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/llButtons4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl1">
                >

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="C"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/btnP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="%"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <ImageButton
                    android:id="@+id/btnD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:src="@drawable/ic_delete"
                    android:onClick="onClick"
                    android:layout_margin="1dp"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="+"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtons3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl1">
                >

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="7"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="8"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="9"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="-"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtons2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl1">
                >

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="4"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="5"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="6"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="x"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtons1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl1">
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="1"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="2"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="3"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="/"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtons0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl1">
                >

                <Button
                    android:id="@+id/btnR"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="rorate"
                    android:layout_margin="1dp"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="."
                    android:layout_margin="1dp"
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:layout_margin="1dp"
                    android:text="="
                    android:onClick="onClick"
                    android:textColor="#43A3B4"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>



        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>